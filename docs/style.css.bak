/* main styles */

* {
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    scroll-behavior: smooth;

}

ul {
    list-style-type: circle;
}

body {
    font-family: 'Montserrat', sans-serif;
    color: #000;
    font-size: 16px;
    line-height: 26px;
    background-color: #fcf8f1;
    overflow-x: hidden;
}

a {
    color: #000;
    text-decoration: none;
}

.container {
    position: relative;
    height: 100vh;
    width: 1320px;
    margin: 0 auto;
    position: relative;
    background-color: #fcf8f1;
}

.navigation {
    position: fixed;
    top: 0px;
    left: 0;
    width: 290px;
    background-color: #B2DBD5;
    height: 100vh;
}

.logo {
    height: -webkit-max-content;
    height: -moz-max-content;
    height: max-content;
    width: 100%;
    display: inline-block;
    padding: 20px;
    text-align: center;
    background-color: #FA8D62;
    font-family: monospace ;
    letter-spacing: 2px;
    font-size: 40px;
    line-height: 40px;
    font-weight: 700;
}

.documentation {
    position: absolute;
    top: 0;
    left: 300px;
    padding: 10px 25px 10px 40px;
    max-width: calc(100vw - 300px);
}

.menu {
    padding-left: 30px;
    padding-right: 10px;
    font-size: 14px;
    font-family: monospace;
}

.menu .menu{
    padding-left: 15px;
    padding-right: 0;
}
.menu .menu .menu{
    padding-left: 15px;
    padding-right: 0;
}

.menu__item {
    margin: 10px 0;
}

.menu__link {
    position: relative;
}


.menu__link--main {
    font-weight: 700;
    text-transform: uppercase;
}

.title {
    font-size: 24px;
    line-height: 30px;
    font-weight: 700;
    padding-bottom: 5px;
    border-bottom: 2px solid rgba(175, 184, 193, 0.4);
    margin-top: 45px;
}

.title--main {
    font-size: 42px;
    line-height: 46px;
    border: none;
}

.title--mini {
    font-size: 20px;
    line-height: 26px;
    border: none;
}

.title--little {
    font-size: 18px;
    line-height: 24px;
    border: none;
}

.text span,
.text-list span {
    font-weight: 700;
}

.text-link {
    /* background-color: rgba(175, 184, 193, 0.2); */
    padding: 1px 5px;
    font-family: monospace;
    border-radius: 5px;
    -webkit-transition: .3s;
    -o-transition: .3s;
    transition: .3s;
}

.text-link:hover {
    color: #FA8D62;
}

.text-link:visited {
    background-color: rgba(175, 184, 193, 0.2);
    padding: 2px 5px;
    border-radius: 5px;
}

.text-list li {
    margin: 5px 0;
}

.code {
    display: block;
    padding: 8px;
    background-color: #afb2b433;
    border-radius: 10px;
    overflow-x: scroll;
}

.table {
    background-color: #afb2b433;
    width: 100%;
    padding: 10px;
    border-collapse: collapse;
}

.table span {
    font-family: monospace;
}

.table__row--main{
    font-weight: 700;
}

.table__cell{
    border: 1px solid #000;
    padding: 5px 10px;
}

.nav-img {
    width: 60%;
    margin: auto;
    display: flex;
    justify-content: flex-start;
}


@media(max-width: 1200px){
    body{
        font-size: 15px;
    }
    .navigation{
        width: 230px;
        font-size: 14px;
    }
    .documentation{
        left: 230px;
    }
    .menu__item{
        font-size: 14px;
        line-height: 16px;
    }
    .menu .menu{
        padding-left: 10px;
    }
    .menu .menu .menu{
        padding-left: 15px;
    }
}

@media(max-width: 800px){
    body{
        font-size: 14px;
        line-height: 23px;
    }
    .navigation{
        width: 100vw;
        height: -webkit-max-content;
        height: -moz-max-content;
        height: max-content;
        position: static;
        padding-bottom: 10px;
    }
    .documentation{
        position: static;
        width: 100vw;
        max-width: unset;
        padding-left: 15px;
        padding-right: 15px;
    }
}
